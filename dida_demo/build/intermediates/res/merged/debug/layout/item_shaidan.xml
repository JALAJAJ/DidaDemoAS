<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp" 
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/cb_item_shaidan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_checked_style" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_item_shaidan_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shaidan_tu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp" >

            <TextView
                android:id="@+id/tv_item_shaidan_title"
                style="@style/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alice Handmade 派对婚礼甜品 金色小清新蛋糕甜品。" />

            <TextView
                android:id="@+id/tv_item_shaidan_content"
                style="@style/item_content_gray_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_below="@id/tv_item_shaidan_title"
                android:text="Alice Handmade 派对婚礼甜品 金色小清新蛋糕甜品。哈根达斯劲爆大削价，买一送一第二份半价，集满9颗龙珠直接送你到非洲，而且有机会参加尼玛大本营" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/saidan_rmb"
                    style="@style/item_price_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="¥" />

                <TextView
                    android:id="@+id/tv_item_shaidan_price"
                    style="@style/item_price_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/saidan_rmb"
                    android:text="168.00" />

                <TextView
                    android:id="@+id/tv_item_shaidan_count"
                    style="@style/item_content_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1" />

                <TextView
                    style="@style/item_content_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_item_shaidan_count"
                    android:text="X" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/item_shaidan.xml -->