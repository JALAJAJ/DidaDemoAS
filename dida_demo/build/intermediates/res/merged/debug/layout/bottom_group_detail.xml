<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
  android:layout_height="54dp"
    android:orientation="horizontal"
      android:background="@color/tab_color_nomal">
   <RelativeLayout 
        android:id="@+id/rl_group_detail_list"
       android:layout_weight="1"
         android:layout_width="0dp"
  android:layout_height="match_parent"
       
       
       >
       <ImageView 
           
            android:id="@+id/iv_group_detail_list"
           android:layout_centerInParent="true"
           android:background="@drawable/add_shopcar_sel"
            android:layout_width="wrap_content"
  android:layout_height="wrap_content"
           
           />
   </RelativeLayout>
   <View
       
       android:background="#212529"
       android:layout_width="1dp"
  android:layout_height="match_parent" 
       
       ></View>
   <RelativeLayout 
        android:id="@+id/rl_group_detail_"
       android:layout_weight="1"
         android:layout_width="0dp"
  android:layout_height="match_parent"
       
       
       >
       <ImageView 
           
            android:id="@+id/iv_group_detail_"
           android:layout_centerInParent="true"
           android:background="@drawable/store_sel"
            android:layout_width="wrap_content"
  android:layout_height="wrap_content"
           
           />
   </RelativeLayout>
   <View
       
       android:background="#212529"
       android:layout_width="1dp"
  android:layout_height="match_parent" 
       
       ></View>
   <RelativeLayout 
        android:id="@+id/rl_group_detail_fav"
       android:layout_weight="1"
         android:layout_width="0dp"
  android:layout_height="match_parent"
       
       
       > <ImageView
            android:id="@+id/iv_group_detail_fav"
            android:layout_centerInParent="true"
           android:background="@drawable/add_order_sel"
            android:layout_width="wrap_content"
  android:layout_height="wrap_content"
           
           /></RelativeLayout>
   <RelativeLayout 
        android:id="@+id/rl_group_detail_join"
       android:background="@color/tab_color_selected"
       android:layout_weight="2"
         android:layout_width="0dp"
  android:layout_height="match_parent"
       
       
       >
       <TextView
           style="@style/selected"
            android:layout_centerInParent="true"
          android:text="立即购买"
            android:layout_width="wrap_content"
  android:layout_height="wrap_content"/>
   </RelativeLayout>

</LinearLayout>
