<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_market_head_lunbotu"
            android:layout_width="match_parent"
            android:layout_height="320dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <!--            <com.meg7.widget.CircleImageView
                             android:id="@+id/iv_market_detail_head_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ququn_head"
                            android:scaleType="centerCrop" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_market_detail_head_title"
                    style="@style/black_14_line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红黄蓝童装，童装女童春装2015春秋新款韩版卡通休闲儿童套装2-3-4-5-6岁童装女童冬装2015红黄蓝童装，童装女童春装2015春秋新款韩版卡通休闲儿童套装2-3-4-5-6岁童装女童冬装2015新款儿童新款儿童卫衣三件套女大童运动秋装套装10岁女孩" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_price_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥" />

                    <TextView
                        android:id="@+id/tv_market_detail_head_price"
                        style="@style/item_price_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="668.00" />

                    <TextView
                        style="@style/item_price_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="原价:¥" />

                    <TextView
                        android:id="@+id/tv_market_detail_head_oldprice"
                        style="@style/item_price_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="778.00" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/divider_nomal_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ll_market_detail_head_share"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/share" />
                    <!-- <TextView
                        android:text="分享"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           style="@style/black_12"/> -->


                </RelativeLayout>

                <View style="@style/divider_nomal_horizontal" />

                <RelativeLayout
                    android:id="@+id/ll_market_detail_head_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shoucang_nor" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递:" />

                <com.dida.first.view.DeadlineTextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量:" />

                <com.dida.first.view.DeadlineTextView
                    android:id="@+id/tv_market_detail_head_count"
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1024" />

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江金华" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/market_detail_head.xml -->