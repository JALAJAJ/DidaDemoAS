<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px" >

    <LinearLayout
        android:id="@+id/ll_item_market_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价(" />

            <TextView
                  android:id="@+id/tv_item_market_comment_count"
                style="@style/black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125" />

            <TextView
                style="@style/black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <View
            style="@style/divider_nomal_horizontal"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.meg7.widget.CircleImageView
                android:id="@+id/civ_market_head_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/market_icon" />

            <TextView
                 android:id="@+id/tv_market_detail_comment_name"
                style="@style/black_light_12_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="索马里玛丽" />
        </LinearLayout>

        <TextView
              android:id="@+id/tv_market_detail_comment_content"
            style="@style/black_light_12_line8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="这件裙子非常喜欢，做工好，面料也不错，和描述一样好，穿起来非常合适，并且不会看出腰腹的肉肉哦～天气凉了，刚好合穿，非常满意！如果卖家真像我的物流信息那样发顺丰快递，我估计早都穿上了……这件裙子非常喜欢，做工好，面料也不错，和描述一样好，穿起来非常合适，并且不会看出腰腹的肉肉哦～天气凉了，刚好合穿，非常满意！如果卖家真像我的物流信息那样发顺丰快递，我估计早都穿上了这件裙子非常喜欢，做工好，面料也不错，和描述一样好，穿起来非常合适，并且不会看出腰腹的肉肉哦～天气凉了，刚好合穿，非常满意！如果卖家真像我的物流信息那样发顺丰快递，我估计早都穿上了……这件裙子非常喜欢，做工好，面料也不错，和描述一样好，穿起来非常合适，并且不会看出腰腹的肉肉哦～天气凉了，刚好合穿，非常满意！如果卖家真像我的物流信息那样发顺丰快递，我估计早都穿上了" />

        <com.dida.first.view.MyGridView
            android:id="@+id/mygv_item_market_comment_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="8dp"
            android:listSelector="#00000000"
            android:numColumns="auto_fit"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="8dp" />
 <TextView
       android:id="@+id/tv_market_detail_comment_zhuijia"
            style="@style/blue_deep_12_line8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="[8天后追加]质量很好 穿的挺显身材的 很喜欢。" />
         <com.dida.first.view.MyGridView
            android:id="@+id/mygv_item_market_comment_zhuijia_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="8dp"
            android:listSelector="#00000000"
            android:numColumns="auto_fit"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="8dp" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                  android:id="@+id/tv_market_detail_comment_date"
                style="@style/gray_12_line8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2015-11-11" />
            <TextView
                  android:id="@+id/tv_market_detail_comment_param"
                android:layout_marginLeft="8dp"
                style="@style/gray_12_line8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="颜色分类:格子 尺码:S" />
        </LinearLayout>

        <View
            style="@style/divider_nomal_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                  android:id="@+id/tv_market_detail_comment_more"
                style="@style/gray_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="查看更多" />
        </RelativeLayout>
    </LinearLayout>

