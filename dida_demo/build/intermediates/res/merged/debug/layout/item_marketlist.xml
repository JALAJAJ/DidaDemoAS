<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px" 
    >
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_market_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/item_market_listview2"
        android:scaleType="centerCrop"/>

    <TextView
        style="@style/black_12_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="夏季女装韩版紧身休闲运动，粥粥同款，非常适合路人甲。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tv_market_item_rmb"
            style="@style/red_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥" />

        <TextView
            style="@style/red_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_market_item_rmb"
            android:text="580.00" />

        <TextView
            android:id="@+id/tv_market_item_count"
            style="@style/gray_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="860" />

        <TextView
            style="@style/gray_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_market_item_count"
            android:text="已售:" />
    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/item_marketlist.xml -->