<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shangjia" />

                    <TextView
                        style="@style/black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="户外运动装备三件套(登山杖 户外双肩包 野营睡袋)三套省73元，现在买就送手电,原装进口，美国海豹特战队首选战斗品牌。"

                        />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/red_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="¥" />

                    <com.dida.first.view.DeadlineTextView
                        android:id="@+id/tv_yaoyue_group_price"
                        style="@style/red_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="468.00" />

                    <TextView
                        style="@style/gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="原价¥" />

                    <com.dida.first.view.DeadlineTextView
                        style="@style/gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="550.00" />


                </LinearLayout>
            </LinearLayout>

            <View

                style="@style/divider_nomal_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_pingou_detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/share" />
                </RelativeLayout>

                <View

                    style="@style/divider_nomal_horizontal" />

                <RelativeLayout
                    android:id="@+id/rl_pingou_detail_fav"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_pingou_detail_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shoucang_nor" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <!--   快递，销量，地址-->
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递:" />

                <com.dida.first.view.DeadlineTextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量:" />

                <com.dida.first.view.DeadlineTextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1024" />

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江金华" />

            </LinearLayout>


        </LinearLayout>
        <View
            style="@style/divider_special_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标" />

                <com.dida.first.view.DeadlineTextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50" />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="份" />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="仅剩" />

                <com.dida.first.view.DeadlineTextView
                    style="@style/red_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12" />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="份" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/deadline"

                    />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="还剩" />

                <com.dida.first.view.DeadlineTextView
                    android:id="@+id/tv_yaoyue_group_day"
                    style="@style/red_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3" />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天" />

                <com.dida.first.view.DeadlineTextView
                    android:id="@+id/tv_yaoyue_group_hour"
                    style="@style/red_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12" />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时" />

                <com.dida.first.view.DeadlineTextView
                    android:id="@+id/tv_yaoyue_group_minute"
                    style="@style/red_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22" />

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
