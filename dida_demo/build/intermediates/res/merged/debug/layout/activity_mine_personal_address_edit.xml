<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_mine_personal_address_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江省温州市龙湾区" />

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="所在地区" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_xingbie_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_open" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:id="@+id/ll_mine_personal_address_detailaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农业开发区文昌路209号红连文创园811" />

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="详细地址" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_open" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:id="@+id/ll_mine_personal_address_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_mine_personal_address_edit_name"
                    style="@style/black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_mine_personal_address_edit_name_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_mine_personal_address_edit_name"
                        style="@style/black_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="马云" />

                    <TextView
                        style="@style/gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="收货人姓名" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_open" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
              android:id="@+id/ll_mine_personal_address_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_mine_personal_address_edit_phone"
                    style="@style/black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_mine_personal_address_edit_phone_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_mine_personal_address_edit_phone"
                        style="@style/black_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18868888888" />

                    <TextView
                        style="@style/gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="手机号码" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_open" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp" >

            <TextView
                style="@style/black_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设为默认地址" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            style="@style/red_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_red_line2"
            android:minHeight="0dp"
            android:padding="8dp"
            android:text="删除" />

        <Button
            android:id="@+id/btn_personal_editnick_confirm"
            style="@style/white_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_red2red_deep"
            android:minHeight="0dp"
            android:padding="8dp"
            android:text="保存" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/activity_mine_personal_address_edit.xml -->