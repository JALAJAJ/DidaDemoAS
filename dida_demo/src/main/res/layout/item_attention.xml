<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#ffffff"
  >
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.meg7.widget.CircleImageView
            android:id="@+id/iv_invate_item_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/invate_icon"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_marginLeft="4dp"
            android:background="@drawable/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/black_14"
            android:id="@+id/tv_invate_item_name"
            android:layout_marginLeft="8dp"
            android:text="豆奶喝不醉"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_invate_item_gender"
            android:layout_marginLeft="4dp"
            android:background="@drawable/gender_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

     <CheckBox
         android:id="@+id/cb_attention"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
         style="@style/style_attention_checkbox"
         android:layout_width="60dp"
            android:layout_height="28dp"

         />

</RelativeLayout>
