<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_footprint_real"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="实体商品" />

                <View
                      android:id="@+id/view_footprint_real"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footprint_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="线下服务" />

                <View
                    android:visibility="gone"
                     android:id="@+id/view_footprint_service"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footprint_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="团购商品" />

                <View
                    android:visibility="gone"
                     android:id="@+id/view_footprint_group"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footprint_aa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AA商品" />

                <View
                    android:visibility="gone"
                     android:id="@+id/view_footprint_aa"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_footprint"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>