<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px" 
    >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp" >
    
        <LinearLayout 
            
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"            
            >
           <com.meg7.widget.CircleImageView
            android:scaleType="centerCrop"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ququn_head" /> 
            
           <LinearLayout 
               android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"        
               
               >
              <TextView style="@style/item_title"
                  android:text="户外运动装备三件套(登山杖 户外双肩包 野营睡袋)三套省73元，现在买就送手电"
                   android:layout_width="match_parent"
    android:layout_height="wrap_content"
                  
                  /> 
               <RelativeLayout 
    android:layout_marginTop="8dp"
     android:layout_width="match_parent"
            android:layout_height="wrap_content"
    
    >
        <LinearLayout 
            android:layout_centerVertical="true"
           android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
    <ImageView
        
        android:background="@drawable/clock"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        
        />
    
    <TextView 
        android:textSize="10sp"
        android:textColor="#909393"
        android:layout_marginLeft="5dp"
        android:text="还剩"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
       
    <TextView 
          android:id="@+id/tv_yaoyue_group_day"
         android:textSize="10sp"
        android:textColor="#fe5d5f"
        android:text="3"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
         android:textSize="10sp"
        android:textColor="#909393"
        android:text="天"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
          android:id="@+id/tv_yaoyue_group_hour"
         android:textSize="10sp"
        android:textColor="#fe5d5f"
        android:text="12"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
         android:textSize="10sp"
        android:textColor="#909393"
        android:text="小时"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
          android:id="@+id/tv_yaoyue_group_minute"
         android:textSize="10sp"
        android:textColor="#fe5d5f"
        android:text="22"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
         android:textSize="10sp"
        android:textColor="#909393"
        android:text="分"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
        android:layout_marginLeft="12dp"
         android:textSize="10sp"
        android:textColor="#909393"
        android:text="参与人数:"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
    <TextView 
         android:id="@+id/tv_yaoyue_group_count"
         android:textSize="10sp"
        android:textColor="#909393"
        android:text="18"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
        </LinearLayout>
        
  <ImageButton 
      android:layout_alignParentRight="true"
       android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
      android:background="@drawable/share"
      />
    
    
</RelativeLayout>
               <LinearLayout 
                   android:layout_marginTop="8dp"
       android:orientation="horizontal"
       
        android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
       >
        <TextView 
        style="@style/item_price_red"
        android:text="¥"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
        <TextView 
             android:id="@+id/tv_yaoyue_group_price"
         style="@style/item_price_red"
        android:text="468.00"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
        <TextView 
            android:layout_marginLeft="8dp"
        style="@style/item_price_gray"
        android:text="原价¥"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
        <TextView 
         style="@style/item_price_gray"
        android:text="541.00"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
        />
       
       
   </LinearLayout>   
           </LinearLayout>
            
            
            
        </LinearLayout>
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/gray"
             android:layout_width="match_parent"
            android:layout_height="1px" 
            ></View>
        
        <LinearLayout 
              android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            >
            
                <LinearLayout 
                     android:gravity="center_horizontal"
                    android:layout_weight="1"
              android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            >
            <TextView 
                android:textColor="#909393"
                android:textSize="14sp"
                android:text="有效截止日期"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
                />
            <TextView 
                style="@style/item_price_black"
                android:layout_marginTop="8dp"
                android:text="2015-08-28"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
                />
            
            
            
        </LinearLayout>
        <View
            android:background="@color/gray"
             android:layout_width="1px"
            android:layout_height="match_parent" 
            ></View>
                <LinearLayout 
                     android:gravity="center_horizontal"
                    android:layout_weight="1"
              android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            >
            <TextView 
                android:textColor="#909393"
                android:textSize="14sp"
                android:text="有效截止日期"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
                />
            <TextView 
                android:layout_marginTop="8dp"
               style="@style/item_price_black"
                android:text="6"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
                />
            
            
            
        </LinearLayout>
        <View
            android:background="@color/gray"
             android:layout_width="1px"
            android:layout_height="match_parent" 
            ></View>
                <LinearLayout 
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
              android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            >
            <TextView 
                android:textColor="#909393"
                android:textSize="14sp"
                android:text="有效截止日期"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
                />
            <TextView 
                android:layout_marginTop="8dp"
                 style="@style/item_price_black"
                android:text="60"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
                />
            
            
            
        </LinearLayout>
            
            
        </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
